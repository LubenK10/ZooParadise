@using ZooParadise.Core.Models.Pet
@model IEnumerable<PetHomeModel>

@{
    ViewData["Title"] = "Home Page";
    var pets = Model.ToList();
}

@if (!pets.Any())
{
    <div class="mt-4 p-5 bg-light">
        <h1 class="display-4">Welcome to the home of every cute pet</h1>
        <p class="lead">
            There are no pets in the system currently available
        </p>
        <hr class="my-4">
        <p class="lead">
            @if (this.User.Identity.IsAuthenticated)
            {
                <a asp-controller="Pet" asp-action="Add" class="btn btn-primary btn-lg"
                    role="button">Add Pet</a>
            }
        </p>
    </div>
}

<div class="mb-5"></div>

<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        @for (int i = 0; i < pets.Count(); i++)
        {
            var pet = pets[i];
            <div class="carousel-item @(i == 0 ? "active" : string.Empty)">
                <img class="d-block w-100" style="height:500px"
                    src="@pet.ImageUrl" alt="@pet.Name">
                <div class="carousel-caption d-none d-md-block">
                    <h5>
                        <a class="btn btn-primary" asp-controller="Pet" asp-action="Details"
                            asp-route-id="@pet.Id"> @pet.Name</a>
                    </h5>
                </div>
            </div>
        }
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
